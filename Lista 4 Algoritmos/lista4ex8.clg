algoritmo lista4ex8;
// Síntese
//  Objetivo:  Calcular a potência de um número;
//  Entrada : base e expoente;
//  Saída   :

principal
	// Declarações
	inteiro x, y, i, resultado;
	
	// Instruções
	escreva("Base: ");
	leia(x);
	escreva("Expoente: ");
	leia(y);

	resultado = x;
	para (i de 1 ate y - 1 passo 1) faca
		resultado = resultado * x;
	fimPara
	
	escreval("Resultado: ", resultado);
	
fimPrincipal
